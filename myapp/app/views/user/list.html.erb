<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
		<% if @users.blank?  %>
			<h3 class="text-center"> There are no users in the system </h3>
		<% else %>
			<h3 class="text-center"> These are the following users </h3>
		<table class="table table-condensed table-hover">
			<thead>
			<tr>
				<th>NAME</th>
				<th>EMAIL</th>
				<th>ID</th>
				<th>delete user</th>
			</tr>
			</thead>
			<% @users.each do |u| %>
			<% if u.id != 1%>
				<tr class="danger">
					<td><%= u.name %></td>
					<td><%= u.email %></td>
					<td><%= u.id %></td>
					<td> <%= link_to 'delete user', {:action => 'destroy' ,:id => u.id }%> </td>
				</tr>
			<% end %>	
			<% end %> 

		</table>

	</div>
	
</div>
<% end %>
</div>